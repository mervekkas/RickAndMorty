<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tool_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextMedium"
        android:gravity="center"
        android:layout_marginVertical="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/line_tool_bar"/>

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toTopOf="@+id/tool_bar_title"
        app:layout_constraintBottom_toBottomOf="@+id/tool_bar_title"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <View
        android:id="@+id/line_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLine"
        app:layout_constraintTop_toBottomOf="@+id/tool_bar_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>